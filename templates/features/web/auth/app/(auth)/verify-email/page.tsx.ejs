"use client";

import { useEffect, useState } from "react";
import { useSearchParams, useRouter } from "next/navigation";
import Link from "next/link";
import { Button } from "@/components/ui/button";
import {
  InputOTP,
  InputOTPGroup,
  InputOTPSlot,
  InputOTPSeparator,
} from "@/components/ui/input-otp";
import { verifyEmailOtp, sendVerificationOtp } from "@/lib/auth/actions";
import { useAuthStore } from "@/store/auth.store";

export default function VerifyEmailPage() {
  const searchParams = useSearchParams();
  const router = useRouter();
  const email = searchParams.get("email");

  const [otp, setOtp] = useState("");
  const [status, setStatus] = useState<"idle" | "verifying" | "success" | "error">("idle");
  const [error, setError] = useState<string | null>(null);
  const [resendDisabled, setResendDisabled] = useState(false);
  const [resendCountdown, setResendCountdown] = useState(0);

  // Auto-verify when all 6 digits entered
  useEffect(() => {
    if (otp.length === 6 && email && status === "idle") {
      handleVerify(otp);
    }
  }, [otp, email, status]);

  // Countdown timer with proper cleanup
  useEffect(() => {
    if (resendCountdown <= 0) return;

    const timer = setTimeout(() => {
      setResendCountdown((prev) => {
        if (prev <= 1) {
          setResendDisabled(false);
          return 0;
        }
        return prev - 1;
      });
    }, 1000);

    return () => clearTimeout(timer);
  }, [resendCountdown]);

  const handleVerify = async (code: string) => {
    if (!email) return;
    setStatus("verifying");
    setError(null);

    const result = await verifyEmailOtp(email, code);

    if (!result.success) {
      setStatus("error");
      setError(result.error || "Invalid code");
      setOtp("");
      return;
    }

    if (result.session) {
      setStatus("success");
      useAuthStore.getState().setSession(result.session);
      router.push("/dashboard");
    } else {
      setStatus("error");
      setError("Verification succeeded but sign-in failed. Please sign in manually.");
    }
  };

  const handleResend = async () => {
    if (!email || resendDisabled) return;

    setResendDisabled(true);
    setResendCountdown(60);
    setError(null);

    const result = await sendVerificationOtp(email);
    if (!result.success) {
      setError(result.error || "Failed to resend code");
    }
  };

  if (!email) {
    return (
      <div className="space-y-6 text-center">
        <h2 className="text-2xl font-bold">Verify your email</h2>
        <p className="text-muted-foreground">No email address provided.</p>
        <Link href="/login">
          <Button variant="outline" className="w-full">Back to sign in</Button>
        </Link>
      </div>
    );
  }

  return (
    <div className="space-y-6">
      <div className="space-y-2 text-center">
        <h2 className="text-2xl font-bold">Enter verification code</h2>
        <p className="text-muted-foreground">
          We sent a 6-digit code to <strong>{email}</strong>
        </p>
      </div>

      {/* OTP Input using shadcn InputOTP */}
      <div className="flex justify-center">
        <InputOTP
          maxLength={6}
          value={otp}
          onChange={setOtp}
          disabled={status === "verifying"}
        >
          <InputOTPGroup>
            <InputOTPSlot index={0} />
            <InputOTPSlot index={1} />
            <InputOTPSlot index={2} />
          </InputOTPGroup>
          <InputOTPSeparator />
          <InputOTPGroup>
            <InputOTPSlot index={3} />
            <InputOTPSlot index={4} />
            <InputOTPSlot index={5} />
          </InputOTPGroup>
        </InputOTP>
      </div>

      {error && (
        <p className="text-sm text-red-500 text-center">{error}</p>
      )}

      {status === "verifying" && (
        <div className="flex justify-center">
          <div className="h-6 w-6 animate-spin rounded-full border-2 border-primary border-t-transparent" />
        </div>
      )}

      {status === "success" && (
        <div className="text-center">
          <p className="text-sm text-green-600">Email verified! Redirecting...</p>
        </div>
      )}

      <div className="text-center text-sm text-muted-foreground">
        Didn&apos;t receive the code?{" "}
        <button
          onClick={handleResend}
          disabled={resendDisabled}
          className="text-primary hover:underline disabled:opacity-50 disabled:cursor-not-allowed"
        >
          {resendDisabled ? `Resend in ${resendCountdown}s` : "Resend"}
        </button>
      </div>

      <Link href="/login">
        <Button variant="outline" className="w-full">Back to sign in</Button>
      </Link>
    </div>
  );
}
