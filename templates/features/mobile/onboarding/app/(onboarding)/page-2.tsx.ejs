export default function OnboardingPage2() {
  const handleContinue = () => {
    <% if (features.onboarding.pages === 2) { %>
      <% if (features.paywall) { %>
    router.replace('/paywall');
      <% } else { %>
    router.replace('/(tabs)');
      <% } %>
    <% } else { %>
    router.replace('/(onboarding)/page-3');
    <% } %>
  };

  return (
    <OnboardingLayout
      title="Powerful Features"
